<%= form_for [current_user, @contact] do |f| %>


   <%= f.label :first_name %>
   <%= f.text_field :first_name %>

   <%= f.label :last_name %>
   <%= f.text_field :last_name %>

   <%= f.label :phone_number %>
   <%= f.text_field :phone_number %>

   <%= f.submit class: "btn link-btn" %>


 <% end %>

<br>
<hr>
